	//php basic
	"zona php":{
		"prefix": "nid",
		"body": "<?php'$1'?>",
		"description": "zona php"
	},
	//php script
	"script php":{
		"prefix": "php",
		"body": "<?php $1 ?>",
		"description": "script php"
	},
	//php script
	"echo":{
		"prefix": "echo - mm",
		"body": "echo $1 ;",
		"description": "echot php"
	},
	//php vard_dump * 2
	"echo":{
		"prefix": "var_dump2 - mm",
		"body": "va_dump( '$1 ',$2 );",
		"description": "var_dump * 2"
	},
	//php pre
	"echo":{
		"prefix": "pre - mm",
		"body": [
			"echo '<pre>';",
			"va_dump( '$1 ',$2 );",
			"echo '</pre>';",
		],
		"description": "pre"
	},
	
