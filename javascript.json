	// console.log debbuger marce:
	"debbuger marce": {
		"prefix": "debbuger - marce",
		"body": [
			"/* DEBUGGER */",
			"console.log($1); debugger;",
			"/* DEBUGGER */"
		],
		"description": "debbuger marce"
	},
	// console.log:
	"console log": {
		"prefix": "mmlog - marce",
		"body": [
			"/* console log - test */",
			"console.log('$1');",
		],
		"description": "Log console simple"
	},
	// Example:
	"Print No funciona": {
		"prefix": "mmnofunciona - marce",
		"body": [
			"console.log('%cNo Funciona!','color:red;font-family:system-ui;font-size:4rem;-webkit-text-stroke: 1px black;font-weight:bold');",
		],
		"description": "muestra el mensjae No funciona - rojo"
	},
	// console.log:
	"Print mensaje testing": {
		"prefix": "mmtesting - marce",
		"body": [
			"//mensaje de test - @test",
			"console.log('%c <testing> $1 ','color:red;font-size: 16px;font-weight: bold;');",
		],
		"description": "log de testeo - rojo"
	},
	// console.log bandera:
	"Print mensaje rojo": {
		"prefix": "mmbandera - marce",
		"body": [
			"//bandera - @test-borrar",
			"console.log('üèÅ!%c $1 ','color:red;font-size: 16px;font-weight: bold;');",
		],
		"description": "mostrar una bandera"
	},
	// console.log:
	"list snippets": {
		"prefix": "snippetm - marce",
		"body": [
			"/*",
			"-- MIS SNIPPETS --",
			" mmlog:      console.log",
			" mmtesting:   log test - mensaje rojo",
			" mmbandera:   console log - emoji bandera! ",
			" mmnofunciona: Mensaje - no funciona - rojo",
			"*/",
			"$1"
		],
		"description": "mustra los snippet disponibles"
	},
	// console.log:
	"Alerta": {
		"prefix": "alert - marce",
		"body": [
			"/* Alert - test @borrar */",
			"alert('$1');"
		],
		"description": "alerta simple"
	},
	// console.log:
	"condicional": {
		"prefix": "mmif - marce",
		"body": [
			"if ($1) {",
			"   $2",
			"}"
		],
		"description": "condicional"
	}
